
<h1 class="page-title">Frequently Asked Questions</h1>

  <style>
    .question, .answer{
      font-size: 1.1em;
      padding: 1em;
    }

  </style>

  <ol>
    <% @frequently_asked_questions.each do |frequently_asked_question| %>
        <p>
        <li><strong><span style="color: #fff; font-size: 14px"><%= frequently_asked_question.question %></span></strong><br/>
        <span style="color: #fff; font-size: 14px"><%= frequently_asked_question.answer %></span>
          </li>
        </p>
    <% end %>
  </ol>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <%= link_to :back do %>
        <span class="back-link-style"><strong>GO BACK</strong>&nbsp;<i class="fa fa-arrow-left" aria-hidden="true"></i></span>
    <%end %>
  </div>
</div>


<script>
    var body = document.getElementsByTagName("body")[0];
    body.style.backgroundColor = "#003768";
    body.style.color = "#fff";
</script>


