<p id="notice"><%= notice %></p>

<h1 class="page-title">Current Veterans Affairs Staff Members</h1>

<table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th>Certifier ID </th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Benefit assigned</th>
      <th>Image File Path</th>
      <th>Available</th>
      <th>Letters Assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certifiers.each do |certifier| %>
      <tr>
        <td><%= certifier.certifier_id %></td>
        <td><%= certifier.first_name %></td>
        <td><%= certifier.last_name %></td>
        <td><%= certifier.email %></td>
        <td><%= certifier.benefit_assigned %></td>
        <td><%= certifier.avatar %></td>
        <td><%= certifier.IsAvailable%></td>
        <td><%= certifier.letters_assigned%></td>
        <td><%= link_to 'Show', certifier, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_certifier_path(certifier), class: 'btn btn-success' %></td>
        <td><%= link_to 'Delete', certifier, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_certifier_path, class:'btn btn-default' do %>
    <span>Add New Staff Member</span>&nbsp;<i class="fa fa-plus" aria-hidden="true"></i></span>

<% end %>

<%= link_to admin_users_path, class:'btn btn-default' do %>
    <span><span>Back to Admin Panel</span>&nbsp;<i class="fa fa-arrow-left" aria-hidden="true"></i></span>
<% end %>
