<p id="notice"><%= notice %></p>

<script>

$(function(){
    var elementText = $('#status').text()

    if (elementText == "true") {

        $("#status").html("Yes");
    }
    else {
        $("#status").html("No");
    }
});

</script>

<div class="contact-card">
  <div class="avatar"><i class="fa fa-user-circle-o" aria-hidden="true"></i></div>
  <h3 class="contact-name"><%= @certifier.first_name %>&nbsp;<%= @certifier.last_name %></h3>
  <ul class="contact-list">
    <li class="contact-item">Staff's ID:  &nbsp; <%= @certifier.certifier_id %></li>
    <li class="contact-item">Email: &nbsp; <%= @certifier.email %></li>
    <li class="contact-item">Available: &nbsp; <span id="status"><%= @certifier.IsAvailable %></span></li>
  </ul>
  <br/>
  <center>
  <div class="form-group row">
    <div class="col-md-12">
      <%= link_to 'Edit Information', edit_certifier_path(@certifier), class: 'btn btn-default' %>
    </div>
  </div>

  <div class="contact-links-container">
    <%= link_to 'Return to Student Lobby', student_visits_path, class: 'btn btn-default' %>
    <%= link_to 'Back to View All Staff', certifiers_path , class: 'btn btn-default' %>
  </div>
  </center>
</div>
<br/>
