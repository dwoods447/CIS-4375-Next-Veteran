<div class="row">
    <div class="col-lg-2 col-md-2 col-sm-2">
      <%= link_to student_kiosk_index_path do %>
          <span class="back-link-style"><strong>GO BACK</strong>&nbsp;<i class="fa fa-arrow-left" aria-hidden="true"></i></span>
      <%end %>
    </div>
  <div class="col-lg-10 col-md-10 col-sm-10">
  </div>
</div>

<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12">
    <h1 style="text-align: center; color: #fff; font-weight: 600; -webkit-text-stroke-width: 1px; -webkit-text-stroke-color: black;">Please Enter Your Information</h1>

    <%= form_for(student ,  html: {class: "new-student", :id => "student_info"}) do |f| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label :student_id ,'Please Enter Your Student ID', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-address-card-o" aria-hidden="true"></i></span>
           <%= f.number_field :student_id, class: 'form-control', placeholder: 'Enter Your Student ID#', :required => true, :id => "studentID" %>
        </div>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :campus_id , 'Please Select Your Campus', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
    <%= f.collection_select :campus_id, Campus.all, :id, :campus_name, {:include_blank => true}, {class: "form-control dropdown-menu "} %>
      </div>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :first_name,  class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
           <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter Your First Name', :id => "firstName" %>
        </div>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :last_name,  class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter Your Last Name', :id => "lastName" %>
        </div>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :phone_number, class: 'cols-sm-2 control-label' %>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
    <%= f.text_field :phone_number, class: 'form-control', placeholder: 'PhoneNumber: No Dashes  ex.xxxxxxxxxx', :id => "phoneNumber" %>
        </div>
      </div>
  </div>

    <div class="form-group">
    <%= f.label :email, class: 'cols-sm-2 control-label'  %>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
            <%= f.text_field :email, class: 'form-control', placeholder: 'Enter your my.lonestar.edu email address', :id => "emailAddress" %>
        </div>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :federal_benefit_id , 'Please Select Your Federal Benefit', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <%= f.collection_select :federal_benefit_id, FederalBenefit.all, :id, :benefit_name, {:include_blank => true}, {class: "form-control dropdown-menu "} %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :state_benefit_id , 'Please Select Your State Benefit', class: 'cols-sm-2 control-label'%>
      <div class="cols-sm-10">
        <div class="input-group">
          <%= f.collection_select :state_benefit_id, StateBenefit.all, :id, :benefit_name, {:include_blank => true}, {class: "form-control dropdown-menu "} %>
        </div>
      </div>
    </div>

 <div class="form-group ">
    <%= f.submit 'Proceed', class: 'btn btn-primary btn-lg btn-block submit-button', :id => "proceed" %>
  </div>
 </div>
<% end %>
</div>
</div>
