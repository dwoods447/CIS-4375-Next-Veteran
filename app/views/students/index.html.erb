<p id="notice"><%= notice %></p>

<style>
  table{

    font-size: 0.8em !important;

  }
  table th{
    max-width: 215px;
    text-align: center;
    text-transform: capitalize;
  }

  table td{
    font-size: 0.98em !important;
    padding:  0.1em !important;
    max-width: 215px;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis !important;
    overflow: hidden;
  }
  #sorted{
    text-align: center;
    font-size: 0.8em;
  }
</style>
<div class="container">
<h1 class="page-title-gray">Current Veterans Affairs Students</h1>
  <p  id="sorted">Sorted Alphabetically from A - Z by "Last Name"</p>

<table class="table table-bordered table-hover table-condensed table-responsive">
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Campus</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Federal Benefit</th>
      <th>State Benefit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td title="<%= student.student_id %>"><%= student.student_id %></td>
        <td title="<%= student.campus.campus_name%>"><%= student.campus.campus_name%></td>
        <td title="<%= student.first_name %>"><%= student.first_name %></td>
        <td title="<%= student.last_name %>"><%= student.last_name %></td>
        <td title="<%= student.phone_number %>"><%= student.phone_number %></td>
        <td title="<%= student.email %>"><%= student.email %></td>
        <td title="<%= student.federal_benefit.benefit_name %>"><%= student.federal_benefit.benefit_name %></td>
        <td title="<%= student.state_benefit.benefit_name %>"><%= student.state_benefit.benefit_name %></td>
        <td><%= link_to 'Show', student, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-success' %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to admin_users_path, class:'btn btn-default pull-left' do %>
      <span><span>Back to Admin Panel</span>&nbsp;<i class="fa fa-arrow-left" aria-hidden="true"></i></span>
  <% end %>
  <%= link_to new_student_path, class:'btn btn-default pull-right' do %>
      <span>Add New Student</span>&nbsp;<i class="fa fa-plus" aria-hidden="true"></i></span>
  <% end %>
</div>
