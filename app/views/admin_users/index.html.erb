<style>
  .admin-menu-container{
    border: 1px solid #666;

    padding: 1em;
    background-color: #eee;
  }


  .admin-menu-container.content{
    z-index: 200;
    min-height: 100%;
  }

  admin-item{
    display: inline-block;
  }

  .icon-small{
    display: inline-block;
    margin: 0.1em;
    font-size: 0.4em !important;
  }
/***************************************************/

  .avatar-container{
    position: relative;
    display: inline-block;
    margin: 3em auto;
    width: 284px;
    height: 284px;
  }

  .image {
    display: block;
    width: 100%;
    height: auto;
  }

  .overlay {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%;
    width: 100%;
    opacity: 0;
    transition: .5s ease;
    background-color: rgba(0, 0, 0, 0.8);
  }

  .avatar-container:hover .overlay {
    opacity: 1;
  }

  .text {
    color: white;
    font-size: 0.9em;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
  }

  .text2 {
    color: white;
    font-size: 0.9em;
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
  }


  .col-centered {
    display:inline-block;
    float:none;
    /* reset the text-align */
    text-align:left;
    /* inline-block space fix */
    margin-right:-4px;
  }
  .fa.fa-users.fa-6{
    font-size: 18em;
    background-color: red;
  }
  a:hover {
    color: #fff;
    background-color: transparent !important;
  }
  .avatar-container  > img{
    border: 2px solid #2E2F30;
  }
  .col-md-3.col-centered a {
    color: transparent !important;
    display: block;
  }
</style>

